<page xmlns="http://schemas.nativescript.org/tns.xsd" 
      xmlns:pb="nativescript-progressbar" 
      loaded="pageLoaded">
      
    <stack-layout>
        <pb:CircleSegmentBar
        progress="{{progress}}"
        text="{{message}}"
        textSize="50"
        widthProgressBackground="20"
        widthProgressBarLine="50"
        backgroundColor="red"
        progressColor="blue"
        linearGradient="false"
        width="200"
        />
    </stack-layout>
</page>